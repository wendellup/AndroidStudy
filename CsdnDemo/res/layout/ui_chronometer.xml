<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Chronometer
        android:id="@+id/ui_meter"
        android:layout_height="50dip"
        android:layout_width="50dip" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button android:text="start" android:onClick="onMeterStart"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <Button android:text="stop" android:onClick="onMeterStop" android:layout_width="50dp"
            android:layout_height="50dp" />

        <Button android:text="reset" android:onClick="onMeterReset" android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>

</LinearLayout>